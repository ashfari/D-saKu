<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="Logout"
        android:onClick="doingLogout"/>

    <Button
        android:id="@+id/prosedurButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoutButton"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="100dp"
        android:text="Prosedur"
        android:onClick="gotoProsedur"/>

    <Button
        android:id="@+id/listJadwalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prosedurButton"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:text="List Jadwal"
        android:onClick="gotoListJadwal"/>

    <Button
        android:id="@+id/dataUserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listJadwalButton"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:onClick="lihatDataPenduduk"
        android:text="Data Penduduk" />

    <Button
        android:id="@+id/verifikasiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataUserButton"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:text="Verifikasi"
        android:onClick="gotoVerifikasiMain"/>

</RelativeLayout>