<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:text="Logout"
        android:onClick="doingLogout"/>

    <Button
        android:id="@+id/buatJadwalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoutButton"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="100dp"
        android:text="Buat Jadwal"
        android:onClick="gotoBuatJadwal"/>

    <Button
        android:id="@+id/notifikasiJadwalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buatJadwalButton"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:text="Notifikasi Jadwal"
        android:onClick="gotoNotifikasiJadwal"/>

</RelativeLayout>